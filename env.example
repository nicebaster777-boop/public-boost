# Application
APP_NAME=Public Boost API
APP_VERSION=0.1.0
DEBUG=false

# Database
POSTGRES_USER=trusted_user
POSTGRES_PASSWORD=CHANGE_THIS_IN_PRODUCTION
POSTGRES_DB=trusted_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Security
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING_AT_LEAST_32_CHARS
ENCRYPTION_KEY=CHANGE_THIS_TO_32_CHAR_STRING_FOR_FERNET_ENCRYPTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_IN_PRODUCTION

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# File Upload
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=5242880

# Email (SMTP) - для отправки писем восстановления пароля
# Включить отправку email (true/false)
SMTP_ENABLED=false

# SMTP сервер (примеры: smtp.gmail.com, smtp.sendgrid.net, smtp.mailgun.org)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# Учетные данные SMTP
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# От кого будут отправляться письма
SMTP_FROM_EMAIL=noreply@publicboost.com
SMTP_FROM_NAME=Public Boost
